<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Artemis.Plugins.Games.Minecraft.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Artemis.Plugins.Games.Minecraft.Views.MinecraftPathDialogView"
             x:DataType="viewModels:MinecraftPathDialogViewModel">
    <StackPanel>
        <TextBlock Classes="card-title">
            Settings
        </TextBlock>
        <Border Classes="card" VerticalAlignment="Stretch" Margin="0,0,5,0">
            <StackPanel>
                <Grid RowDefinitions="*,*" ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0">
                        <TextBlock>
                            Minecraft Path for the automatic download of Fabric and the mod
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>